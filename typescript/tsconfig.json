{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "ESNext"
        ],
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}